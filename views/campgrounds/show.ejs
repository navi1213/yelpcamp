<% layout("layouts/boilerplate") %>
<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <img src="<%=campground.image  %>" alt="キャンプ場の写真" />
      <div class="card-body">
        <h5 class="card-title"><%=campground.title %></h5>
        <p class="card-text"><%=campground.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%=campground.location %></li>
        <li class="list-group-item">登録者:<%=campground.author.username %></li>
        <li class="list-group-item"><%=campground.price %>円/泊</li>
      </ul>
      <% if(currentUser && campground.author.equals(currentUser._id) ) {%>
      <div class="card-body">
        <a class="btn btn-info" href="/campgrounds/<%=campground._id%>/edit">編集</a>
        <form
          class="d-inline"
          action="/campgrounds/<%=campground._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">削除</button>
        </form>
      </div>
      <% } %>
      <div class="card-footer text-muted">2days ago</div>
    </div>
  </div>

  <div class="col-6">
    <% if(currentUser){ %>
    <h2>レビュー</h2>
    <form
      action="/campgrounds/<%= campground._id%>/reviews"
      class="mb-3 validated-form"
      method="POST"
      novalidate
    >
      <div class="mb-3">
        <label for="rating" class="form-label">評価</label>
        <input
          type="range"
          min="1"
          max="5"
          name="review[rating]"
          id="rating"
          class="form-range"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">コメント</label>
        <textarea
          name="review[body]"
          class="form-control"
          id="body"
          cols="30"
          rows="3"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button class="btn btn-success">投稿する</button>
    </form>
    <% } %>
    <% for(let review of campground.reviews) { %>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">評価<%= review.rating %></h5>
        <h6 class="card-subtitle mb-2 text-muted">投稿者:<%=review.author.username  %></h6>
        <p class="card-text">コメント:<%=review.body %></p>
        <% if(currentUser && review.author.equals(currentUser._id) ) {%>
        <form action="/campgrounds/<%=campground._id%>/reviews/<%= review._id%>?_method=DELETE" method="POST"><button class="btn btn-sm btn-danger">削除</button></form>
        <% } %>
      </div>
      <% } %>
    </div>
  </div>
</div>
